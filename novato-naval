#include <stdio.h>
#include <stdbool.h>

int main() {
    // Vetor com letras para representar as linhas do tabuleiro
    char linha[10] = {'A', 'B', 'C', 'D', 'E', 'F', 'G', 'H', 'I', 'J'};

    // 1. Criando o Tabuleiro (Matriz 10x10)
    int tabuleiro[10][10];

    // Inicializa todas as posições com 0 (água)
    for (int i = 0; i < 10; i++) {
        for (int j = 0; j < 10; j++) {
            tabuleiro[i][j] = 0;
        }
    }

    // 2. Criando os navios (vetores unidimensionais)
    // Cada navio ocupa 3 posições e será representado pelo valor 3
    int navioHorizontal[3] = {3, 3, 3};
    int navioVertical[3]   = {3, 3, 3};

    // 3. Definindo as coordenadas iniciais dos navios (definidas diretamente no código)
    int inicioH[2] = {2, 1}; // Navio horizontal começa na linha 2, coluna 1 (C2)
    int inicioV[2] = {5, 7}; // Navio vertical começa na linha 5, coluna 7 (F8)

    // 4. Validação para garantir que os navios cabem no tabuleiro e não se sobrepõem
    bool podeColocarH = true;
    bool podeColocarV = true;

    // Verifica se o navio horizontal cabe
    if (inicioH[1] + 3 > 10) {
        podeColocarH = false;
    }

    // Verifica se o navio vertical cabe
    if (inicioV[0] + 3 > 10) {
        podeColocarV = false;
    }

    // Verifica sobreposição entre os dois navios
    if (podeColocarH && podeColocarV) {
        for (int i = 0; i < 3; i++) {
            int linhaH = inicioH[0];
            int colunaH = inicioH[1] + i;
            for (int j = 0; j < 3; j++) {
                int linhaV = inicioV[0] + j;
                int colunaV = inicioV[1];
                if (linhaH == linhaV && colunaH == colunaV) {
                    podeColocarV = false; // se sobrepuser, não pode colocar o vertical
                }
            }
        }
    }

    // 5. Posicionando os navios se forem válidos
    if (podeColocarH) {
        for (int i = 0; i < 3; i++) {
            tabuleiro[inicioH[0]][inicioH[1] + i] = navioHorizontal[i];
        }
    } else {
        printf("❌ Erro: navio horizontal não cabe no tabuleiro!\n");
    }

    if (podeColocarV) {
        for (int i = 0; i < 3; i++) {
            tabuleiro[inicioV[0] + i][inicioV[1]] = navioVertical[i];
        }
    } else {
        printf("❌ Erro: navio vertical não cabe no tabuleiro ou está sobrepondo outro!\n");
    }

    // 6. Exibindo o tabuleiro completo
    printf("\n=== TABULEIRO BATALHA NAVAL ===\n\n");

    // Cabeçalho das colunas
    printf("   ");
    for (int j = 0; j < 10; j++) {
        printf("%d ", j);
    }
    printf("\n");

    // Linhas com letras (A–J)
    for (int i = 0; i < 10; i++) {
        printf("%c  ", linha[i]);
        for (int j = 0; j < 10; j++) {
            printf("%d ", tabuleiro[i][j]);
        }
        printf("\n");
    }

    return 0;
}
