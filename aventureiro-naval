#include <stdio.h>

#define LINHAS 10
#define COLUNAS 10
#define TAM_NAVIO 3
#define AGUA 0
#define NAVIO 3

int main() {
    char linha[10] = {'A','B','C','D','E','F','G','H','I','J'};
    int tabuleiro[LINHAS][COLUNAS];

    // 1️⃣ Inicializa o tabuleiro com 0 (água)
    for (int i = 0; i < LINHAS; i++) {
        for (int j = 0; j < COLUNAS; j++) {
            tabuleiro[i][j] = AGUA;
        }
    }

    // 2️⃣ Cria os navios (cada um é um vetor de tamanho 3)
    int navioH1[TAM_NAVIO] = {NAVIO, NAVIO, NAVIO};
    int navioV1[TAM_NAVIO] = {NAVIO, NAVIO, NAVIO};
    int navioD1[TAM_NAVIO] = {NAVIO, NAVIO, NAVIO};
    int navioD2[TAM_NAVIO] = {NAVIO, NAVIO, NAVIO};

    // 3️⃣ Define as coordenadas iniciais (linha, coluna)
    int iniH1[2] = {2, 1};  // horizontal (C2, C3, C4)
    int iniV1[2] = {5, 7};  // vertical (F8, G8, H8)
    int iniD1[2] = {0, 3};  // diagonal ↘ (A4, B5, C6)
    int iniD2[2] = {0, 9};  // diagonal ↙ (A10, B9, C8)

    // 4️⃣ Posiciona o navio horizontal
    if (iniH1[1] + TAM_NAVIO <= COLUNAS) {
        for (int i = 0; i < TAM_NAVIO; i++) {
            if (tabuleiro[iniH1[0]][iniH1[1] + i] == AGUA) {
                tabuleiro[iniH1[0]][iniH1[1] + i] = navioH1[i];
            }
        }
    }

    // 5️⃣ Posiciona o navio vertical
    if (iniV1[0] + TAM_NAVIO <= LINHAS) {
        for (int i = 0; i < TAM_NAVIO; i++) {
            if (tabuleiro[iniV1[0] + i][iniV1[1]] == AGUA) {
                tabuleiro[iniV1[0] + i][iniV1[1]] = navioV1[i];
            }
        }
    }

    // 6️⃣ Posiciona o navio diagonal ↘ (linha e coluna aumentam)
    if (iniD1[0] + TAM_NAVIO <= LINHAS && iniD1[1] + TAM_NAVIO <= COLUNAS) {
        for (int i = 0; i < TAM_NAVIO; i++) {
            if (tabuleiro[iniD1[0] + i][iniD1[1] + i] == AGUA) {
                tabuleiro[iniD1[0] + i][iniD1[1] + i] = navioD1[i];
            }
        }
    }

    // 7️⃣ Posiciona o navio diagonal ↙ (linha aumenta, coluna diminui)
    if (iniD2[0] + TAM_NAVIO <= LINHAS && iniD2[1] - (TAM_NAVIO - 1) >= 0) {
        for (int i = 0; i < TAM_NAVIO; i++) {
            if (tabuleiro[iniD2[0] + i][iniD2[1] - i] == AGUA) {
                tabuleiro[iniD2[0] + i][iniD2[1] - i] = navioD2[i];
            }
        }
    }

    // 8️⃣ Mostra o tabuleiro final
    printf("\n=== TABULEIRO BATALHA NAVAL ===\n\n");
    printf("   ");
    for (int j = 0; j < COLUNAS; j++) {
        printf("%d ", j);
    }
    printf("\n");

    for (int i = 0; i < LINHAS; i++) {
        printf("%c  ", linha[i]);
        for (int j = 0; j < COLUNAS; j++) {
            printf("%d ", tabuleiro[i][j]);
        }
        printf("\n");
    }

    return 0;
}
